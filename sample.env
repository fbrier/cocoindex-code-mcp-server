# .env
DATABASE_URL=postgresql+psycopg://cocoindex:cocoindex@postgres:5432/cocoindex

# Embedding settings (all local, no API key needed)
EMBEDDING_MODEL_AUTO=true          # enables language-specific model selection
# Or force one model:
# EMBEDDING_MODEL=BAAI/bge-m3

# Retrieval settings (tune for accuracy vs tokens)
HYBRID_SEARCH=true
SPARSE_WEIGHT=0.35                  # 0.0 = pure semantic, 0.5+ = more keyword heavy
TOP_K=12                            # number of chunks returned (lower = fewer tokens)
CHUNK_FACTOR_PERCENT=80             # 80 = ~250-350 tokens/chunk, 50 = ~150 tokens/chunk

# Optional performance
MAX_WORKERS=4
BATCH_SIZE=32