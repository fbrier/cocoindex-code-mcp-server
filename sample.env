# .env
DATABASE_URL=postgresql+psycopg://cocoindex:cocoindex@postgres:5432/cocoindex

# Embedding settings (all local, no API key needed)
# enables language-specific model selection
EMBEDDING_MODEL_AUTO=true
# Or force one model:
# EMBEDDING_MODEL=BAAI/bge-m3

# Retrieval settings (tune for accuracy vs tokens)
HYBRID_SEARCH=true
# 0.0 = pure semantic, 0.5+ = more keyword heavy
SPARSE_WEIGHT=0.35
# number of chunks returned (lower = fewer tokens)
TOP_K=12
# 80 = ~250-350 tokens/chunk, 50 = ~150 tokens/chunk
CHUNK_FACTOR_PERCENT=80

# Optional performance
MAX_WORKERS=4
BATCH_SIZE=32

GIT_AUTHOR_NAME="Frederick Brier"
GIT_AUTHOR_EMAIL="fbrier@multideck.com"
SSH_KEY_FILE="/home/fbrier/.ssh/id_rsa"
